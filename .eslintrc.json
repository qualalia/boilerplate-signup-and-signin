{
    "root": true,
    "env": {
	"browser": true,
	"node": true,
	"amd": true,
	"mocha": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended"],
    "plugins": ["react", "prettier"],
    "parser": "babel-eslint",
    "parserOptions": {
	"ecmaFeatures": {
	    "jsx": true
	},
	"sourceType": "module"
    },
    "rules": {
	"semi": 0,
	"comma-dangle": 0,
	"no-undef": "warn",
	"no-console": "warn",
	"no-mixed-spaces-and-tabs": "smart-tabs"
    }
}
